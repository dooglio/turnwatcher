#!/bin/bash
#
# This script is used to synchronize our server snap
# (i.e. the colocation server) with our home server
# (i.e. substitute for now.)
#

# We need to update www.turnwatcher.com/documentation

OUT_SERVER=jrsync.turnwatcher.com
OUT_PATH=/usr/clients/www_html/www.turnwatcher.com/public_html

IN_SERVER=server/www.turnwatcher.com/public_html/documentation

OUTPUT=../tmp/rsync-output.txt

OPTIONS="--rsh=ssh --port=3873
	--recursive --links
	--perms --times --update
	--sparse --whole-file --compress
	--checksum --one-file-system
	--temp-dir=../../tmp
	--exclude=.*.swp
	--blocking-io --bwlimit=150
	-v --stats"


cmd="rsync $OPTIONS $IN_SERVER www@$OUT_SERVER:$OUT_PATH/"
echo $cmd
echo $cmd >$OUTPUT
$cmd >>$OUTPUT


